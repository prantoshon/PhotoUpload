@model dropyourcomplain.Models.AddComplain

@{
    ViewBag.Title = "AddNewCompain";
}

<h2>AddNewCompain</h2>
@ViewBag.msg


@using (Html.BeginForm("AddNeCompain","New",FormMethod.Post,new {enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>AddComplain</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.ComplainType, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.ComplainType, new SelectList(ViewBag.list), "Select One", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ComplainType)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ComplainArea, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.ComplainArea, new SelectList(ViewBag.ComplainArea), "Select One", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ComplainArea)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RoadNumber, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.RoadNumber, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RoadNumber)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ComplainDetails, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.ComplainDetails, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ComplainDetails)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Photo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.Photo)*@
                <input type="file" id="imgfile" name="imgfile" class="btn btn-info">
                @Html.ValidationMessageFor(model => model.Photo)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Compailer_Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Compailer_Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Compailer_Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Cotract_Number, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Cotract_Number, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Cotract_Number)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
